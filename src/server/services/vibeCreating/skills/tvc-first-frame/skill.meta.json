{
  "name": "tvc-first-frame",
  "version": "1.0.0",
  "description": "为每个分镜生成精准的首帧图，基于分镜内容和参考图",
  "author": "Vibe Creating",
  "category": "tvc",
  "dependencies": [
    "tvc-script",
    "tvc-reference-images",
    "tvc-storyboard"
  ],
  "tools": [
    "image.generate_from_references_batch"
  ],
  "parameters": {
    "input": [
      {
        "name": "分镜头脚本",
        "type": "object",
        "required": true,
        "description": "从步骤3获取的分镜头列表"
      },
      {
        "name": "产品图",
        "type": "string",
        "required": true,
        "description": "从步骤0获取的用户产品图"
      },
      {
        "name": "参考图",
        "type": "object",
        "required": true,
        "description": "从步骤2获取的参考图（角色图、背景图）"
      },
      {
        "name": "风格偏好",
        "type": "string",
        "required": false,
        "description": "视觉风格"
      },
      {
        "name": "图片尺寸",
        "type": "string",
        "required": false,
        "default": "1024x576",
        "description": "图片分辨率"
      }
    ],
    "output": {
      "type": "object",
      "description": "首帧图列表，包含镜头ID、URL、来源、参考图等"
    }
  },
  "output_format": "html",
  "step_id": 4,
  "step_title": "首帧图生成"
}
